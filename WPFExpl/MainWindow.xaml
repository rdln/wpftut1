<Window x:Class="WPFExpl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExpl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="71" Margin="22,32,0,0" VerticalAlignment="Top" Width="301">

            <TextBox x:Name="textboxUsername" HorizontalAlignment="Left" Height="23" Margin="79,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="textboxPassword" HorizontalAlignment="Left" Height="23" Margin="79,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="LoginButton" Content="Button" HorizontalAlignment="Left" Margin="204,40,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="8,37,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Label x:Name="labelUsermessage" Content="User not logged in" HorizontalAlignment="Left" Margin="494,51,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
